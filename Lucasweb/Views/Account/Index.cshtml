@model Tuple<Lucasweb.DataContracts.AppUserId, Lucasweb.DataContracts.User, List<string>>
@{
    ViewBag.Title = "Account - Lucasweb";
}

<script>
    function ProfImgTextMargin() {
        var hb = $("#headbar")
        if (hb.width() > 768) {
            $("#ProfImgText").css("text-align", "right");
        } else {
            $("#ProfImgText").css("text-align", "left");
        }
        
    }
    window.onload = ProfImgTextMargin;
    window.onresize = ProfImgTextMargin;
</script>

<h4>My Account</h4>
<hr />
<div class="row">
    <div class="col-sm-3 col-xs-12">
        <div class="row">
            <div class="col-sm-12 col-xs-6 B-FFF"><img src="~/Content/Images/BlankProfileImage.bmp" class="W-200px img-responsive float-right PL-15px" alt="Profile Images don't exist yet, so Your ancient browser or slow internet not being able to view this doesn't make a difference ☺" /></div>
            <div id="ProfImgText" class="col-sm-12 col-xs-6">
                <h3>@Model.Item2.UserName</h3>
                <p>@Model.Item2.FirstName @Model.Item2.LastName</p>
            </div>
        </div>
    </div>
    <div class="col-sm-9 col-xs-12">
        <div class="tabbed-group">
            <div class="tabbed-group-head"><h4>Your Roles in the Lucasweb: <span class="glyphicon glyphicon-question-sign" title="Roles are like sub-passwords attached to your account that give you access to more of this site than a typical account can give you."></span></h4></div>
            <div class="tabbed-group-body">
                @if (Model.Item3.Count > 0)
            {
                    <div class="row">
                        @foreach (var Role in Model.Item3)
                {
                            <div class="col-xs-12 col-sm-6 col-lg-4 B-555">
                                <span class="glyphicon glyphicon-certificate"></span>
                                <h4>@Role</h4>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <h4><small>You have no Roles in the Lucasweb</small></h4>
                }
            </div>
        </div>


    </div>

</div>