@model IEnumerable<Lucasweb.Models.Sound>

@{ 
    ViewBag.Title = "Soundweb";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
                <audio src="@item.Location.ToString()" preload="metadata" controls="controls" type="audio/@item.type.ToString()"></audio>
            </div>

        }
    </div>
</body>
</html>
