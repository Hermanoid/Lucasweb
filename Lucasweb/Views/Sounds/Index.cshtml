@model IEnumerable<Lucasweb.Models.Sound>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Listen:
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <audio controls="" preload="metadata" src="@item.Location.ToString()" type="audio/@item.type.ToString()"></audio>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SoundID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SoundID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SoundID })
        </td>
    </tr>
}

</table>
