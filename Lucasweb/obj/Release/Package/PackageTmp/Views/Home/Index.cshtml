@model List<Lucasweb.DataContracts.Project>
@{
    ViewBag.title = "Lucasweb - Home";
}

<style>
    .row {
        margin-right: 0;
    }

    .container {
        margin-right: 0;
        margin-left: 0;
    }
</style>


<div>
    <div class="jumbotron PL10 Mstrip">
        <h1 class="text-center">The Lucasweb</h1>
        <h3 class="text-center">Welcome the the Lucasweb!</h3>
        <p class="text-center">The Lucasweb is a combination of the website-works of <br />Lucas Niewohner</p>
    </div>
    @*<div class="text-center B-DDD row">
            <h3 class="text-center Mstrip">In the works:</h3>
            <br />
        </div>*@
    <div>
        <h3 class="text-center">Subprojects:</h3>
        <br />
        <div class="container-fluid">
            <div class="row">
                @foreach (var item in Model)
                {
                    <a href="@item.URL">
                        <div class="col-lg-1 col-md-2 col-sm-3 col-xs-4 text-center HB-CCC">
                            @if (item.isGlyph)
                            {
                                <span class="glyphicon @item.glyphClass Font24px" aria-hidden="true"></span>
                            }
                            else
                            {
                                <img class="Font24px" src="@item.imgSrc" />
                            }
                            <p>@item.DisplayName</p>
                        </div>
                    </a>
                }
                
            </div>
        </div>
        <br />
        <p class="text-center">See the <a href="Home/Projects">Complete Subproject Page</a> For more </p>
    </div>
    <div class="row B-EEE">
        <h3 class="text-center">About the Author</h3>
        <br />
        <p class="text-center">See <a href="About">About the Author</a> for Lucas N's mini-bio</p>
    </div>
</div>